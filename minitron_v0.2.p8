function _init()
 poke(0x5f2d, 1)
 menus={}
 windows={}
 menushow=0
end

function _update()
 msx=stat(32)
 msy=stat(33)
 clickstrt()
 if stat(34)==2 then
  menushow=1
  mx=msx
  my=msy
  mx2=msx+44
  my2=msy+18
 elseif stat(34)==1 then
  menushow=0
 end
end

function _draw()
 cls(13)
 spr(16,0,120)
 for i=1,14 do
  spr(17,i*8,120)
 end
 drwmenu()
 spr(18,120,120)
 spr(1,msx,msy)
end
